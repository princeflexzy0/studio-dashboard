# ========================================
# Studio Dashboard Environment Variables
# ========================================

# Application
NEXT_PUBLIC_APP_NAME=Studio Dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
# NEXT_PUBLIC_BACKEND_API_URL=http://localhost:5000/api

# Authentication
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Database (if using backend)
# MONGODB_URI=mongodb://localhost:27017/studio-dashboard
# DATABASE_URL=postgresql://user:password@localhost:5432/studio_dashboard

# JWT (if using backend)
# JWT_SECRET=your-jwt-secret-key-here
# JWT_EXPIRE=7d

# File Upload
# NEXT_PUBLIC_MAX_FILE_SIZE=10485760
# NEXT_PUBLIC_ALLOWED_FILE_TYPES=video/mp4,image/jpeg,image/png,application/pdf
# UPLOAD_DIR=./uploads

# Storage (Optional - AWS S3, Cloudinary, etc.)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Payment Gateway (Stripe)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Email Service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@studiodashboard.com

# Monitoring & Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Feature Flags
# NEXT_PUBLIC_ENABLE_BACKEND=false
# NEXT_PUBLIC_ENABLE_PAYMENTS=false
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development
# NODE_ENV=development
# NEXT_PUBLIC_DEBUG=true
